<h1>add new post</h1>
<%= form_for @post do |f| %>
	<p>
	<%= f.label :title%> <br />
	<%= f.text_field :title%> </br />
	</p>
	
		<p>
	<%= f.label :body%> <br />
	<%= f.text_area :body%> </br />
	</p>
	
	<p>
	<%= f.select :category_id, Category.all.collect {|x| [x.name,x.id]}%> <br />
	</p>
	
	<p>
	<%= f.submit "add post"%> <br />
	</p>
	

<%end%>